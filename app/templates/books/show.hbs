<div class="jumbo show-listing">
  <h2 class="title">{{model.title}}</h2>
  <div class="right detail-section">
    <div class="detail author">
      <strong>Author:</strong> {{model.author}}
    </div>
    <div class="detail">
      <strong>Type:</strong> {{book-genre model.genre}} - {{model.genre}}
    </div>
    <div class="detail">
      <strong>Audience:</strong> {{model.audience}}
    </div>
    <div class="detail">
      <strong>Rating:</strong> {{model.rating}}
    </div>
    <p class="description">{{model.description}}</p>
  </div>
  <img src="{{model.image}}" class="book-pic">
</div>
